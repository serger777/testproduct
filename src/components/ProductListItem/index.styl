.product-item
	text-align center
	cursor pointer
	position relative
	flex-basis 20%
	border 2px solid transparent
	padding  0 20px
	transition 500ms
	&:hover
		border 2px solid black
	button
		border none
		padding 0
		margin 0
		cursor pointer
				
	img
		width 100%
		margin-bottom 20px
	.name
		display inline-block
		margin-bottom 10px
		text-align left
		&.active
			color yellow
	.favorite
		&.active
			color red
	.user
		&.active
			color blue
	.star
		&.active
			color red
	.wrap
		display flex
		align-items center
		justify-content space-between
		margin-bottom 10px
	.price-item
		color green
@media (max-width $sm)
	.product-item
		flex-basis 50%
@media (max-width $xs)
	.product-item
		flex-basis 100%
	